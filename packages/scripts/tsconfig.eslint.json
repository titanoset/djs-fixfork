{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"allowJs": true
	},
	"include": [
		"*.ts",
		"*.js",
		"*.cjs",
		"*.mjs",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.cjs",
		"src/**/*.mjs",
		"bin",
		"scripts",
		"__tests__",
		"__mocks__",
		"turbo"
	],
	"exclude": ["node_modules", "turbo/generators/templates"]
}
