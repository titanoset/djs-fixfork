{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"jsx": "preserve",
		"baseUrl": ".",
		"outDir": "dist",
		"noEmit": true,
		"skipLibCheck": true,
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx", "src/**/*.cjs", "src/**/*.mjs", "bin"],
	"exclude": ["node_modules"]
}
